<p id="notice"><%= notice %></p>

<h1>Artworks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Picture url</th>
      <th>Categorie</th>
      <th>Weight</th>
      <th>Size</th>
      <th>Sale</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.user %></td>
        <td><%= artwork.name %></td>
        <td><%= artwork.description %></td>
        <td><%= artwork.price %></td>
        <td><%= artwork.picture_url %></td>
        <td><%= artwork.categorie %></td>
        <td><%= artwork.weight %></td>
        <td><%= artwork.size %></td>
        <td><%= artwork.sale %></td>
        <td><%= artwork.tag %></td>
        <td><%= link_to 'Show', artwork %></td>
        <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
        <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

