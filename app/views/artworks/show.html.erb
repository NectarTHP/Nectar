
<section class="bg-light">
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div class="col-md-4">
        <%if @artwork.is_sold?%>
        <div class="card mb-2 mt-4">
          <div class="card-header text-center">
            <h4 class="font-weight-bold">ARTWORK SOLD</h4>
          </div>
          <div class="card-body">
            <p class="card-text">This artwork has been sold on <%=@artwork.line_items[0].updated_at.strftime("%F at %H:%M")%> to <%=@artwork.line_items[0].order.user.first_name%> <%=@artwork.line_items[0].order.user.last_name%>.</p>
          </div>
        </div>
        <%end%>
        <h2 class="h1"><b><%= @artwork.name %></b></h2>
        <h3 class="h3"><b>By: <%=@artwork.user.artistname %></b></h3>
        <ul class="list-group list-group-line">
          <li class="list-group-item d-flex align-items-center">
            <i class="icon-info fs-24 text-orange"></i>
            <span><b>Description:</b> <%= @artwork.description %></span>
          </li>
          <li class="list-group-item d-flex align-items-center">
            <i class="icon-money fs-24 text-orange"></i>
            <span><b>Price</b>: <%= @artwork.price %></span>
          </li>
          <li class="list-group-item d-flex align-items-center">
            <i class="icon-package fs-24 text-orange"></i>
            <span><b>Weight:</b><%=  @artwork.weight %></span>
            <li class="list-group-item d-flex align-items-center">
              <i class="icon-package fs-24 text-orange"></i>
              <span><b>Size:</b><%= @artwork.size %></span>
            </li>
          </ul>
          <a href="<%=new_line_item_path(@artwork.id)%>"role="button" class="btn btn-with-ico btn-orange text-white mt-3">Add to cart <i class="icon-shopping-cart2 fs-20"></i></a>
        </div>
        <div class="col-md-8">
          <ul class="masonry gallery row gutter-1">
            <li class="col-6" data-aos="zoom-in">
              <figure class="photo equal equal-double">
                <a href="<%=@artwork.picture_url%>" 
						        style="background-image: url(<%=@artwork.picture_url%>);">
                  <span class="photo-caption">
                    <span>Photo Caption</span>
                  </span>
                </a>
              </figure>
            </li>
            <li class="col-6" data-aos="zoom-in">
              <figure class="photo equal">
                <a href="<%=@artwork.picture_url%>" 
						        style="background-image: url(<%=@artwork.picture_url%>);">
                  <span class="photo-caption">
                    <span>Photo Caption</span>
                  </span>
                </a>
              </figure>
            </li>
            <li class="col-6" data-aos="zoom-in">
              <figure class="photo equal">
                <a href="<%=@artwork.picture_url%>" 
						        style="background-image: url(<%=@artwork.picture_url%>);">
                  <span class="photo-caption">
                    <span>Photo Caption</span>
                  </span>
                </a>
              </figure>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

