
<header class="header-sticky header-light bg-light">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="<%=root_path%>">
        <img class="navbar-logo navbar-logo-light"  src="../../assets/demo/logo/nectar-dark6.png" alt="Logo" >
        <img class="navbar-logo navbar-logo-dark" src="../../assets/demo/logo/nectar-dark6.png" alt="Logo">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="burger"><span></span></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav align-items-center mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="<%=root_path%>" role="button">
              Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%=artworks_path%>" role="button">
              Collections
            </a>
          </li>
        </ul>
        <% if user_signed_in?%>
          <ul class="navbar-nav align-items-center mr-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown-2" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%if current_user.first_name == nil or current_user.first_name == ""%>
                  Menu
                <%else%>
                  <%=current_user.first_name%> <%=current_user.last_name%>
                <%end%>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="<%=user_path(current_user.id)%>"> <i class="fas fa-user"></i>  My profile</a>
                <a class="dropdown-item" href="<%=orders_path(current_user.id)%>"> <i class="far fa-list-alt"></i>  My orders</a>
                <a class="dropdown-item" href="<%=cart_path(current_user.cart.id)%>"><i class="fas fa-shopping-bag"></i> My cart</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="<%=destroy_user_session_path%>" data-method="delete"><i class="fas fa-sign-out-alt" ></i> Log out</a>
              </div>
            </li>
          </ul>
        <%else%>
          <a href="<%=new_user_registration_path%>" class="btn btn-info btn-rounded btn-sm mr-2 px-3" role="button">Register</a>
          <a href="<%=new_user_session_path%>" class="btn btn-outline-dark btn-rounded btn-sm px-3" role="button">Log in</a>
        <%end%>
      </div>
    </nav>
  </div>
  <div><%= render 'layouts/alerts' %></div>
</header>

