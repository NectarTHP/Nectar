            <li class="nav-item ">
              <a class="nav-link " href="<%=user_session_path%>"  role="button" >
                  <i class="far fa-user" style="font-size: 1.75em;"></i>
              </a>
            </li>
            <li class="nav-item ">
              <a class="nav-link " href="<%=root_path%>" role="button" >
                <i class="far fa-heart"  style="font-size: 1.75em;"></i> 
              </a>
            </li>
            <li class="nav-item ">
              <a class="nav-link " href="<%=cart_path(current_user.cart.id)%>"  role="button" >
