<!-- schedule -->
 
<section class="bg-dark text-white">
    <div class="container">
      <div class="row mb-3">
        <div class="col">
          <div class="nav nav-text">
            <a class="nav-item nav-link active" data-toggle="tab" href="#first">All your orders</a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane show active" id="first" role="tabpanel" aria-labelledby="first-tab">
                <% @user_orders.each do |order| %>
              <div class="accordion-group" data-accordion-group>
                <div class="accordion" data-accordion>
                  <div class="accordion-control" data-control>
                    <span class="fw-25">Order number : <%= order.id %> </span>
                    <h5>Date of order : <%= order.created_at.strftime("%F") %> </h5>
                    <div class="speakers text-right">
                      <ul >
                        <li>More details</li>
                      </ul>
                    </div>
                  </div>
                  <div class="accordion-content" data-content>
                    <div class="accordion-content-wrapper">
                        <ul class="ml-lg-25 mr-lg-25">
                              <% order.line_items.each do |item| %>
                                <li><%= item.artwork.name %> - <%= number_to_currency(item.artwork.price, unit:"â‚¬") %></li>
                              <% end %>
                        </ul>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- / schedule -->