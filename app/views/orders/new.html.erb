<h1>Checkout page</h1>

<h4><i class="icon-map-pin2 fs-40 mb-1 text-purple"></i>Your order will be shipped to this adress :</h4>
<p>
  <%= current_user.first_name %> <%= current_user.last_name %><br>
  <%= current_user.adress %><br>
  <%= current_user.zipcode %> <%= current_user.city %>
</p>
<h4><i class="icon-check-circle2 fs-24 mr-2 text-primary"></i>You order contains the following :</h4>
<ul>
  <% @cart.line_items.each do |line_item| %>
    <li><%= line_item.artwork.name %>/ Price: <%= number_to_currency(line_item.artwork.price, unit: "â‚¬") %>
    <% end %>
  </ul>
  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <h4>Total: <%= number_to_currency(@cart.cart_total) %></h4>
    </article>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Artworks from Nectar website"
          data-amount="<%=@cart.cart_total*100%>"
          data-currency="eur"
          data-locale="auto"
          data-label="Pay now!"></script>
  <% end %>
